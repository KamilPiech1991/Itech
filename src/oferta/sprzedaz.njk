--- 
layout: 'layouts/base.njk'
title: Oferta sprzedaży
description: Opis
---

<section class="section-contact pt-small pb-large">
    <div class="container">

        <div class="row">
            <div class="col-md-8">
                <div class="single-post-title-wrap">
                    <div class="breacrumbs">
                        <a href="/">
                                Główna
                            </a>
                        <span>
                                |
                            </span>
                        <span>
                            {{ title }}
                        </span>
                    </div>
                    <h1 class="single-post-title mt-4 mb-5">
                        {{ title }}
                    </h1>
                </div>
            </div>
        </div>

        {% set counter = 1 %}
        {% for post in collections.products %}
        <div class="row gx-5 align-items-center pt-small">
            <div class="col-12 col-md-5">
                <div class="services-card">
                    <img src="{{ post.data.thumbnail }}" class="mb-3" alt="{{ post.data.title }}"/>
                </div>
            </div>
            <div class="col-12 col-md-4">
                <div class="services-card">
                    <h2 class="h5 uppercase mb-4">{{ post.data.title }}</h2>
                    <p>{{ post.data.description }}</p>
                </div>
            </div>
            <div class="col-12 col-md-3">
                <div class="services-card">
                    <button data-modal="modal-{{ counter }}" class="button mt-4">
                        Zobacz więcej
                    </button>
                </div>
            </div>
        </div>
        <div class="modal" id="modal-{{ counter }}">
            <div class="modal-bg modal-exit"></div>
            <div class="modal-container">

                <div class="contact-form-wrap">
                    <h3 class="mb-5">Wyślij formularz</h3>
                    <p>{{ post.data.title }}</p>
                    <form action="https://formsubmit.co/biuro@itech.pl" method="POST">

                    <input type="hidden" name="_next" value="https://itech.dfirma.pl/wyslano-formularz/">
                    <input type="hidden" name="_captcha" value="false">
                    <input type="text" name="_honey" style="display:none">

                        <div class="form-field">
                            <input id="name" type="text" name="Imię" placeholder="Imię i nazwisko">
                        </div>
                        <div class="form-field">
                            
                        </div>
                        <div class="form-field">
                            <input id="phone" type="tel" name="Telefon" placeholder="Numer telefonu">
                        </div>
                        <div class="form-field">

                            <input id="mail" type="mail" name="Email" placeholder="Adres email" required>
                        </div>
                        <div class="form-field">
                            <textarea name="Wiadomosc" placeholder="Treść wiadomości" required></textarea>
                        </div>
                        <div class="form-field">
                            <input type="submit" class="button" value="Wyślij">
                        </div>
                    </form>
                </div>  

              <span class="modal-close modal-exit">X</span>
            </div>
        </div>
        {% set counter = counter + 1 %}
        {% endfor %}
 

    </div>
</section>